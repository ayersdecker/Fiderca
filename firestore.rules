rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // User data - each user can only access their own data
    match /userData/{userId} {
      // Users can read their own data
      allow read, write: if isOwner(userId);
      
      // Allow authenticated users to read userData (needed to discover shared vaults)
      // This is safe because sensitive data should be in vaults, not userData
      allow read: if isSignedIn();
      
      // Prevent creation of documents with mismatched userId
      allow create: if isOwner(userId) && 
                      request.resource.data.keys().hasAll(['connections', 'vaults', 'calendarEvents', 'needs']);
    }
    
    // User profiles - readable by authenticated users for search
    match /users/{userId} {
      // Anyone authenticated can read user profiles (for search)
      allow read: if isSignedIn();
      // Users can only write their own profile
      allow write: if isOwner(userId);
    }
    
    // Connection requests
    match /connectionRequests/{requestId} {
      // Users can read requests where they are sender or receiver
      allow read: if isSignedIn() && 
                    (resource.data.fromUserId == request.auth.uid || 
                     resource.data.toUserId == request.auth.uid);
      // Users can create requests where they are the sender
      allow create: if isSignedIn() && 
                      request.resource.data.fromUserId == request.auth.uid;
      // Users can update/delete requests where they are sender or receiver
      allow update, delete: if isSignedIn() && 
                              (resource.data.fromUserId == request.auth.uid || 
                               resource.data.toUserId == request.auth.uid);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
