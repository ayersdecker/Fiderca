rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // User data - each user can only access their own data
    match /userData/{userId} {
      // Users can read and write only their own data
      allow read, write: if isOwner(userId);
      
      // Prevent creation of documents with mismatched userId
      allow create: if isOwner(userId) && 
                      request.resource.data.keys().hasAll(['connections', 'vaults', 'calendarEvents', 'needs']);
    }
    
    // Public needs board (optional future feature)
    // Uncomment if you want a shared needs board
    // match /publicNeeds/{needId} {
    //   allow read: if isSignedIn();
    //   allow create: if isSignedIn() && 
    //                   request.resource.data.postedBy == request.auth.uid;
    //   allow update, delete: if isSignedIn() && 
    //                           resource.data.postedBy == request.auth.uid;
    // }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
